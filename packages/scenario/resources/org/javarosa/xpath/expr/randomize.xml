<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:h="http://www.w3.org/1999/xhtml">
    <h:head>
        <h:title>Randomize Test</h:title>
        <model>
            <instance>
                <data id="randomize">
                    <no-seed-random-value/>
                    <no-seed-fruit1/>
                    <no-seed-fruit2/>
                    <static-seed-random-value/>
                    <static-seed-fruit1/>
                    <static-seed-fruit2/>
                    <seed>42</seed>
                    <nodeset-seed-random-value/>
                    <nodeset-seed-fruit1/>
                    <nodeset-seed-fruit2/>
                    <meta>
                        <instanceID/>
                    </meta>
                </data>
            </instance>

            <instance id="fruits">
                <root>
                    <item>
                        <label>Apple</label>
                        <name>apple</name>
                    </item>
                    <item>
                        <label>Banana</label>
                        <name>banana</name>
                    </item>
                    <item>
                        <label>Cherimoya</label>
                        <name>cherimoya</name>
                    </item>
                    <item>
                        <label>Durian</label>
                        <name>durian</name>
                    </item>
                    <item>
                        <label>Elderberry</label>
                        <name>elderberry</name>
                    </item>
                    <item>
                        <label>Fig</label>
                        <name>fig</name>
                    </item>
                </root>
            </instance>
            <instance id="numbers">
                <root>
                    <item>1</item>
                    <item>2</item>
                    <item>3</item>
                    <item>4</item>
                    <item>5</item>
                    <item>6</item>
                </root>
            </instance>
            <bind nodeset="/data/no-seed-fruit1" type="string"/>
            <bind nodeset="/data/no-seed-fruit2" type="string"/>
            <bind nodeset="/data/no-seed-random-value" type="int" calculate="max(randomize(instance('numbers')/root/item))"/>
            <bind nodeset="/data/static-seed-fruit1" type="string"/>
            <bind nodeset="/data/static-seed-fruit2" type="string"/>
            <bind nodeset="/data/static-seed-random-value" type="int" calculate="max(randomize(instance('numbers')/root/item, 42))"/>
            <bind nodeset="/data/nodeset-seed-seed" type="int"/>
            <bind nodeset="/data/nodeset-seed-fruit1" type="string"/>
            <bind nodeset="/data/nodeset-seed-fruit2" type="string"/>
            <bind nodeset="/data/nodeset-seed-random-value" type="int" calculate="max(randomize(instance('numbers')/root/item, /data/seed))"/>
            <bind nodeset="/data/meta/instanceID" calculate="concat('uuid:', uuid())" readonly="true()" type="string"/>
        </model>
    </h:head>
    <h:body>
        <input ref="/data/no-seed-random-value"/>
        <select1 ref="/data/no-seed-fruit1">
            <label>Fruit #1</label>
            <itemset nodeset="randomize(instance('fruits')/root/item)">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>
        <select1 ref="/data/no-seed-fruit2">
            <label>Fruit #2</label>
            <itemset nodeset="randomize(instance('fruits')/root/item)">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>
        <input ref="/data/static-seed-random-value"/>
        <select1 ref="/data/static-seed-fruit1">
            <label>Fruit #1</label>
            <itemset nodeset="randomize(instance('fruits')/root/item, 42)">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>
        <select1 ref="/data/static-seed-fruit2">
            <label>Fruit #2</label>
            <itemset nodeset="randomize(instance('fruits')/root/item, 42)">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>
        <input ref="/data/nodeset-seed-random-value"/>
        <select1 ref="/data/nodeset-seed-fruit1">
            <label>Fruit #1</label>
            <itemset nodeset="randomize(instance('fruits')/root/item, /data/seed)">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>
        <select1 ref="/data/nodeset-seed-fruit2">
            <label>Fruit #2</label>
            <itemset nodeset="randomize(instance('fruits')/root/item, /data/seed)">
                <value ref="name"/>
                <label ref="label"/>
            </itemset>
        </select1>
    </h:body>
</h:html>
